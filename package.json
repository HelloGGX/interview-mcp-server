{
  "name": "mcp-interview-server",
  "module": "src/index.ts",
  "main": "build/index.js",
  "type": "module",
  "version": "1.0.0",
  "description": "Interview MCP Server 是一款强大的MCP Server工具，为公司提供智能化的面试体验。它集成了更加科学实用的简历分析能力，并与主流IDE无缝集成，为面试官提供高效精简的技术面试准备工作流程。",
  "private": true,
  "author": "gavin",
  "license": "Apache-2.0",
  "bin": {
    "interview-mcp-server": "build/http-server.js"
  },
  "files": [
    "build"
  ],
  "bugs": {
    "url": "https://github.com/HelloGGX/interview-mcp-server"
  },
  "scripts": {
    "inspect": "npx @modelcontextprotocol/inspector node -- build/index.js",
    "build": "npx bun build src/index.ts --outdir build --target node && shx chmod +x build/*.js && shx cp -r src/recorder build/",
    "build:http": "npx bun build src/server/http-server.ts --outdir build --target node && shx chmod +x build/*.js && shx cp -r src/recorder build/",
    "dev": "npx bun --watch src/index.ts",
    "dev:http": "npx bun --watch src/server/http-server.ts",
    "start": "npx bun run src/index.ts",
    "start:http": "npx bun run src/server/http-server.ts",
    "format": "prettier --write .",
    "lint": "eslint \"**/*.{js,ts,tsx}\" --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HelloGGX/interview-mcp-server"
  },
  "keywords": [
    "interview-mcp-server",
    "mcp",
    "agent",
    "fast-mcp"
  ],
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@eslint/json": "^0.12.0",
    "@eslint/markdown": "^6.5.0",
    "@types/express": "^4.17.17",
    "@types/node": "^20.11.0",
    "@types/ws": "^8.18.1",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.1",
    "eslint-plugin-vue": "^10.2.0",
    "globals": "^16.2.0",
    "prettier": "^3.5.3",
    "shx": "^0.4.0",
    "typescript-eslint": "^8.33.1"
  },
  "peerDependencies": {
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "@opendocsg/pdf2md": "^0.2.1",
    "@openrouter/ai-sdk-provider": "^0.7.2",
    "ai": "^4.3.16",
    "dotenv": "^17.0.0",
    "express": "^4.21.2",
    "fastmcp": "^1.21.0",
    "marked": "^15.0.12",
    "open": "^10.1.2",
    "ws": "^8.18.3",
    "zod": "^3.24.2"
  }
}
